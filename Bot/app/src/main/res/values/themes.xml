<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Bot" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#98939F</item>
        <item name="colorPrimaryVariant">#9271DC</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#C6C2CF</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Bot.Fullscreen" parent="Theme.Bot">
        <item name="android:actionBarStyle">@style/Widget.Theme.Bot.ActionBar.Fullscreen</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.Bot.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">#83A3B3</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
</resources>